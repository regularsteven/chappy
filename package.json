{
  "name": "chappy",
  "version": "0.0.1",
  "description": "Chat-first browser built with Electron, Vue, and Tailwind.",
  "main": "main/main.js",
  "scripts": {
    "prepare:icons": "node scripts/prepare-icons.js",
    "dev": "npm run prepare:icons && concurrently --kill-others-on-fail \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "node scripts/free-port.js 5173 && vite --host 127.0.0.1 --port 5173 --strictPort",
    "dev:main": "wait-on http://127.0.0.1:5173 && cross-env ELECTRON_RUN_AS_NODE= VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build:renderer": "npm run prepare:icons && vite build",
    "build:test-zip": "npm run build:renderer && node scripts/package-build.js",
    "build:desktop": "npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg zip --publish never && node scripts/print-release-paths.js",
    "build": "npm run build:desktop",
    "start": "npm run dev",
    "test": "node scripts/check-tabs.mjs",
    "postinstall": "npm run prepare:icons && node scripts/brand-electron.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^26.8.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.regularsteven.chappy",
    "productName": "Chappy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main/**/*",
      "resources/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/chappy-logo.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "Chappy-${version}-${arch}.${ext}"
    },
    "dmg": {
      "artifactName": "Chappy-${version}-${arch}.${ext}"
    }
  }
}
