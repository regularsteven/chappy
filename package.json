{
  "name": "chappy",
  "version": "0.1.0",
  "description": "Chat-first browser built with Electron, Vue, and Tailwind.",
  "main": "main/main.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite --host 127.0.0.1 --port 5173 --strictPort",
    "dev:main": "wait-on http://127.0.0.1:5173 && cross-env ELECTRON_RUN_AS_NODE= VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "vite build",
    "start": "npm run dev",
    "test": "node scripts/check-tabs.mjs",
    "postinstall": "node scripts/brand-electron.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}
